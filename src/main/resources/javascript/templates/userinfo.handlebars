<div class="col">
    <div class="card profile-card-1">

        <img src="https://images.pexels.com/photos/946351/pexels-photo-946351.jpeg?w=500&h=650&auto=compress&cs=tinysrgb" alt="profile-sample1" class="background"/>
        {{#if profilePictureUrl}}
            <img src='{{profilePictureUrl}}' class='profile user-avatar img-fluid'/>
        {{else}}
            <img src='/modules/jexperience/images/default-profile.jpg' class='user-avatar img-fluid'/>
        {{/if}}
        <div class="card-content">
            <h2>{{firstName}} {{lastName}}<small>{{jobTitle}}</small></h2>
            <div class="icon-block">{{email}}</div>
            <div class="icon-block">Last visit: {{lastVisit}}</div>
            <div class="icon-block"><a href="#"><i class="fa fa-facebook"></i></a><a href="#"> <i class="fa fa-twitter"></i></a><a href="#"> <i class="fa fa-google-plus"></i></a></div>
        </div>
    </div>
</div>
